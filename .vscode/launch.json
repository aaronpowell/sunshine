{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Attach to Functions",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:azureFunctions.pickProcess}"
    },
    {
      "name": ".NET Core Docker Attach (downloader)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
          "pipeProgram": "docker",
          "pipeArgs": [ "exec", "-i", "sunshine-downloader" ],
          "debuggerPath": "/vsdbg/vsdbg",
          "pipeCwd": "${workspaceRoot}",
          "quoteArgs": false
      }
    },
    {
      "name": ".NET Core Docker Attach (mock api)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
          "pipeProgram": "docker",
          "pipeArgs": [ "exec", "-i", "sunshine-mockapi" ],
          "debuggerPath": "/vsdbg/vsdbg",
          "pipeCwd": "${workspaceRoot}",
          "quoteArgs": false
      }
    },
    {
      "name": ".NET Core Docker Attach (functions)",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickRemoteProcess}",
      "pipeTransport": {
          "pipeProgram": "docker",
          "pipeArgs": [ "exec", "-i", "sunshine-functions" ],
          "debuggerPath": "/vsdbg/vsdbg",
          "pipeCwd": "${workspaceRoot}",
          "quoteArgs": false
      }
    }
  ]
}
